# Restrict access to the admin directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # If the IP is not yours, redirect to the homepage
    RewriteCond %{REMOTE_ADDR} !^YOUR_IP_ADDRESS$
    RewriteCond %{REQUEST_URI} !setup_db\.php
    RewriteRule .* - [F,L]
</IfModule>

# Prevent directory listing
Options -Indexes

# Deny access to files with specific extensions
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
